// Write a Java program that declares an integer array
import java.util.Scanner; // Import Scanner class for user input

public class Array {
    public static void main(String[] args) {
        int[] ar = new int[10]; // Declare an integer array of size 10
        Scanner sc = new Scanner(System.in); // Create a Scanner object to read input from the console

        System.out.println("Enter 10 integers:");

        // Input elements into the array
        for (int i = 0; i < 10; i++) {
            ar[i] = sc.nextInt();
        }

        System.out.println("The elements are: ");

        // Print the array elements
        for (int i = 0; i < 10; i++) {
            System.out.print(ar[i] + " ");
        }

        System.out.println(); // Move to the next line after printing all elements
    }
}

// Input: Enter 10 integers: 5 12 7 9 3 21 4 8 6 15
// Output: The elements are: 5 12 7 9 3 21 4 8 6 15
